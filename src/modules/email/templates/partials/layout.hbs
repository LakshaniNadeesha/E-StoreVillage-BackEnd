<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>aGuard</title>
    <link href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;1,400&display=swap' rel='stylesheet' type='text/css'>
    <style>
        * {
            font-family: 'Montserrat';
        }

        .body {
            margin: 0px;
            padding: 0px;
            background-color: #fcfcfc;
            font-family: 'Montserrat';
            -webkit-font-smoothing: subpixel-antialiased;
            color: #5c5c5c;
            font-size: 18px;
            line-height: 1.5;
            font-weight: 400;
        }

        p {
            margin-bottom: 20px;
            font-size: 18px;
        }

        strong {
            font-weight: 600;
            font-size: 18px;
        }

        .clearfix {
            display: block;
        }

        .wrapper {
            margin: 0px;
            padding: 0px;
        }

        .page-body {
            background-color: #ffffff;
            padding: 100px 70px;
            width: 100%;
            max-width: 850px;
            border: 1px solid #e2e2e2;
            margin: 80px 0px 80px 0px;
            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
        }

        .text-center {
            text-align: left;
        }

        .header-top {
            padding: 15px 25px;
            display: block;
            background-color: #000;
        }

        .title-head {
            margin: 0px;
            color: #ffffff;
            font-weight: 600;

        }

        .meta-para {
            padding: 25px;
        }

        .signature {
            margin-top: 50px;
        }

        hr {
            border: 1px solid #868e92;
        }

        .app-section p {
            float: left;
            padding: 10px;
        }

        .meta-center {
            text-align: center;
        }

        .table-center {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>

<body class="body">
    <table width="100%" height="100%" class="wrapper" cellpadding="0" cellpadding="0">
        <tr>
            <td>
                <table align="center">
                    <tr>
                        <td>
                            <div class="page-body text-center clearfix">
                                <div class="header-top">
                                    <p class="title-head">E-StoreVillage</p>
                                </div>
                                <div class="meta-para">
                                    {{> content}}

                                    <span class="signature">
                                        <p>Best Re,<br>
                                            E-StoreVillage Team</p>
                                    </span>
                                </div>
                                <hr>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>

</html>